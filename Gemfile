# Gemfile (at root of project)
source 'https://rubygems.org'

# Web framework & JSON handling
gem 'sinatra'
gem 'sinatra-contrib'   # reload, error handling, JSON helpers
gem 'json'

# Browser automation and drivers
gem 'watir'
gem 'webdrivers'        # manages ChromeDriver, GeckoDriver, etc.

# Testing frameworks
gem 'rspec'
gem 'rack-test'        # for Sinatra route specs

group :development do
  gem 'dotenv'             # load environment variables from .env
end
gem "rackup", "~> 2.2"
gem "puma", "~> 6.6"
